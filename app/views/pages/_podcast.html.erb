<div class="back-to">
  <p><a href="#">&larr; back to search results</a></p>
</div>

<div class="pod-wrap">

  <% unless @podcast.blank? %>

  <div class="pod-title">
    <p class="thumb">
      <img src="<%= @podcast.itunes_image %>" />
    </p>
    <h1><%= @podcast.title %></h1>
  </div> <!-- end: .pod-title -->

  <div class="pod-info">
    <h4>Podcast Info</h4>
    <p class="desc"><%= @podcast.description %></p>
    <ul class="actions">
      <li><a href="<%= @url_itunes %>">iTunes</a></li>
      <li><a href="<%= @feedUrl %>">RSS</a></li>
      <li><a href="<%= @podcast.url %>">Podcast Website</a></li>
    </ul>
  </div> <!-- end: .pod-info -->

  <div class="ep-box">
    <h4>Latest Episode</h4>
    <ul class="eps">
      <% @podcast.entries[1..-1].each_with_index do |entry,i| %>
      <li class="epb">
        <%= link_to(entry['enclosure_url']) do %>
          <p class="datetime">
            <span class="date"><%= entry.published.strftime("%b %e, %Y") %></span>
            <span class="time"><%= entry.published.strftime("%l:%M %p") %></span>
          </p> <!-- end: .datetime -->
          <h3><%= entry.title %></h3>
          <p class="play"><span></span></p>
        <% end %>
        <% unless entry['itunes_subtitle'].blank? %><p class="desc"><%= entry.itunes_subtitle %></p><% end %>
        <ul class="sub">
          <% unless entry['itunes_duration'].blank? %>
            <li class="l"><%= entry.itunes_duration %></li>
          <% end %>
          <% unless entry['url'].blank? %>
            <li class="r"><a href="<%= entry.url %>">View on Web</a></li>
          <% end %>
        </ul>
      </li>
      <% end %>
    </ul> <!-- end: .eps -->
  </div> <!-- end: .ep-box -->
  
  <% end # unless @podcast.blank? %>

</div> <!-- end: .pod-wrap -->